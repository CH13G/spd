{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "outDir": "./dist",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceRoot": ".",
    "inlineSources": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2018",
      "dom"
    ],
    "baseUrl": ".",
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "bazelOptions": {
    "suppressTsconfigOverrideWarnings": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
